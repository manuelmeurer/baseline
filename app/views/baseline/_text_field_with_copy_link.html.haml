-# frozen_string_literal: true
-# locals: (text:, button_color_class: :primary, css_class: nil)

- clipboard_stimco = stimco(:copy_to_clipboard, to_h: false)

.input-group{ class: css_class, data: clipboard_stimco.to_h }
  = text_field_tag :text, text, class: "form-control bg-white", data: clipboard_stimco.target(:container), readonly: true
  = link_to "#", class: "btn btn-outline-#{button_color_class}", data: clipboard_stimco.action(:copy) do
    = icon "copy"
    = t(:copy).capitalize
