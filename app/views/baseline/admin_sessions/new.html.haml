-# frozen_string_literal: true

%h2
  Login

- if Rails.env.development?

  %p
    Select user to log in as:

    = form_with url: url_for, data: stimco(:autosubmit) do |form|
      -# = form.hidden_field :return_to, value: params[:return_to]
      = form_field form, :select, :admin_user_id, options: options_from_collection_for_select(AdminUser.all, :id, :name), include_blank: true, label_style: false

- else

  %p
    Please log in with your
    = @email_domain
    Google account:

  =# button_to url_for, params: { return_to: params[:return_to] }, class: "btn btn-primary btn-lg", data: { turbo: false } do
  = button_to url_for, class: "btn btn-primary btn-lg", data: { turbo: false } do
    = icon "paper-plane"
    Let's go
